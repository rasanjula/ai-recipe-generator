{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2022"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "../node_modules/@types", "../../node_modules/@types"],
    "paths": { "$amplify/*": ["../.amplify/generated/*"] }
  },
  "include": ["**/*.ts", "**/*.d.ts"]
}
